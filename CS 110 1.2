plt.show()


# SELECTION SORT
import random
def selection(list):
    steps = 0
    for i in range(len(list)):
        steps += 1
        min_n = i
        for j in range(i+1, len(list)):
            steps += 1
            if list[min_n]> list[j]:
                steps += 1
                min_n = j
        list[i], list[min_n] = list[min_n], list[i]
    return steps
