# INSERTION SORT
def insertion(list):
    steps = 0
    for j in range (len(list)):
        steps +=1
        key = list[j]
        steps +=1
        i = j - 1
        while (i >= 0) and (list[i] > key):
            steps +=1
            list[i+1] = list[i]
            steps +=1
            i = i - 1
        steps +=1    
        list[i + 1] = key
    return steps

