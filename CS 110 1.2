# BUBBLE SORT
def bubble(list):
    steps = 0
    for i in range (1, len(list)):
        steps += 1
        for j in range (len(list)-1, 0, -1):
            steps += 1
            if list[j] < list[j-1]:
                list[j], list[j-1] = list[j-1], list[j]
                steps += 1
    return steps
